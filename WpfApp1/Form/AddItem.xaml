<Window x:Class="WpfApp1.Form.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Form"
        xmlns:my="clr-namespace:WpfApp1.UserMade"
        mc:Ignorable="d"
        Title="AddItem" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Name="Main">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="9" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="确定" Width="70" Height="30" Margin="0,0,30,0"></Button>
            <Button Content="取消" Width="70" Height="30" Margin="0,0,10,0"></Button>
        </StackPanel>
    </Grid>

</Window>
